<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_chat_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.GroupChatFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/group_chat_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_twenty"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/my_account"
        android:textColor="@color/gray_color_text"
        android:textSize="@dimen/text_size_twenty"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/group_chat_title_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigation_bar_divider_height"
        android:layout_marginStart="@dimen/margin_twenty_five"
        android:layout_marginTop="@dimen/margin_ten"
        android:layout_marginEnd="@dimen/margin_thirty"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_chat_title_text_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_group_chat_message_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/margin_twenty"
        app:layout_constraintTop_toBottomOf="@id/group_chat_title_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

